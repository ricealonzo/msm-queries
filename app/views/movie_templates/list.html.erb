<h1>List of Movies</h1>
<a href="/movies">Go Back</a>
<table border="1">
  <tr>
    <th>ID</th>
    <th>Image</th>
    <th>Title</th>
    <th>Year</th>
    <th>Director</th>
  </tr>

  <% Movie.all.each do|a_movie| %>
    <tr>
      <td><%= a_movie.id %></td>
      <td><img src="<%= a_movie.image %>" width="100" alt="Photo"></td>
      <td><%= a_movie.title %></td>
      <td><%= a_movie.year %></td>
        <% matching_director = Director.where({:id => a_movie.director_id })%>
        <% @the_match= matching_director.at(0) %>
      <%# @the_match.each do |director|%>
          <td><%= @the_match.name  %> </td>
          
  

      <td><a href="/movies/<%= a_movie.id %>">Show details</a></td>
    </tr>
  <% end %>
</table>
